<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ir_module_category_helpdesk" model="ir.module.category">
         <field name="name">helpdesk</field>
    </record>

    <record id="res_group_helpdesk_user" model="res.groups">
         <field name="name">User</field>
         <field name="category_id" ref="ir_module_category_helpdesk"/>
    </record>

    <record id="res_group_helpdesk_manager" model="res.groups">
         <field name="name">Manager</field>
         <field name="category_id" ref="ir_module_category_helpdesk"/>
         <field name="implied_ids" eval="[(4, ref('res_group_helpdesk_user'))]"/>
         <field name="users" eval="[(4, ref('base.user_admin'))]"/>
    </record>
    <record id="helpdesk_ticket_personal_rule" model="ir.rule">
         <field name="name">Personal Ticket</field>
         <field ref="model_helpdesk_ticket" name="model_id"/>
         <field name="domain_force">[('user_id','=',user.id)]</field>
         <field name="groups" eval="[(4, ref('res_group_helpdesk_user'))]"/>
    </record>
     <record id="helpdesk_ticket_all_rule" model="ir.rule">
         <field name="name">All Ticket</field>
         <field ref="model_helpdesk_ticket" name="model_id"/>
         <field name="domain_force">[(1,'=',1)]</field>
         <field name="groups" eval="[(4, ref('res_group_helpdesk_manager'))]"/>
    </record>

    
</odoo>