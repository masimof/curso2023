        <field name="report_type">qweb-pdf</field>
        <field name="report_name">helpdesk_miguelangelsimo.user_card_report</field>
        <field name="report_file">helpdesk_miguelangelsimo.user_card_report</field>
        <field name="print_report_name">'User Card - %s' %(object.name)</field>
        <field name="binding_model_id" ref="base.model_res_users"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="helpdesk_miguelangelsimo.paperformat_user_card"/>
    </record>

</odoo>
