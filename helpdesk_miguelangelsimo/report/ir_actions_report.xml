<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_report_helpdesk_ticket" model="ir.actions.report">
        <field name="name">Helpdesk Ticket</field>
        <field name="model">helpdesk.ticket</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">helpdesk_miguelangelsimo.report_helpdesk_ticket</field>
        <field name="report_file">helpdesk_miguelangelsimo.report_helpdesk_ticket</field>
        <field name="print_report_name">'Ticket - %s' % (object.name)</field>
        <field name="binding_model_id" ref="helpdesk_miguelangelsimo.model_helpdesk_ticket"/>
        <field name="binding_type">report</field>
    </record>

    <record id="action_report_helpdesk_ticket_list" model="ir.actions.report">
