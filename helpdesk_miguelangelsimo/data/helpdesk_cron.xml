<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!-- - hacer un cron que borre los tags que no estén asingnados a ningúnt ticket, que se ejecute una vez al día -->
    <record id="ir_cron_helpdesk_clean_tags" model="ir.cron">
        <field name="name">Helpdesk: clean on ussed tags</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="nextcall" eval="(DateTime.now().replace(hour=2, minute=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')" />
        <field name="doall" eval="False"/>
        <field name="model_id" ref="model_helpdesk_ticket_tag"/>
        <field name="code">model._clean_tags()</field>
        <field name="state">code</field>
    </record>
</odoo>
