<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_helpdesk_create_ticket_form" model="ir.ui.view">
        <field name="name">view.helpdesk_create_ticket.form</field>
        <field name="model">helpdesk.create.ticket</field>
        <field name="arch" type="xml">
            <form string="Create Ticket">
                    <group name="main">
                        <field name="tag_id" invisible="1"/>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                    <footer>
                        <button name="create_ticket" string="Accept" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
            </form>
        </field>
    </record>

    <record id="helpdesk_create_ticket_action" model="ir.actions.act_window">
        <field name="name">Create Ticket</field>
        <field name="res_model">helpdesk.create.ticket</field>
        <field name="view_mode">form</field>
        <field name="target">new</field> 
    </record>

</odoo>